{
  "version": 2,
  "builds": [
    { "src": "mock/*.json", "use": "@now/static" },
    { "src": "api/**/*.js", "use": "@now/node" },
    { "src": "index.js", "use": "@now/node-server" }
  ],
  "routes": [
    {
      "src": "/users",
      "dest": "/index.js",
      "methods": ["GET"]
    },
    {
      "src": "/user",
      "dest": "/index.js",
      "methods": ["POST"]
    }
  ]
}
